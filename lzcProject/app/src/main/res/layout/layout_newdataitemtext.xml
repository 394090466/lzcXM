<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/tv_title_newitem"
        android:text="奥术大师多撒大所多撒大所大所大所大所多奥术大师多撒大所多撒大所大所大所大所多"
        tools:ignore="RtlSymmetry"/>

    <TextView
        android:id="@+id/tv_ly_newitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="中国青年牛网"
        android:textColor="@color/sytb2"
        android:textSize="@dimen/text_size_sp_12"
        android:layout_below="@+id/tv_title_newitem"/>

    <TextView
        android:id="@+id/tv_pj_newitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="277评语"
        android:textColor="@color/sytb2"
        android:textSize="@dimen/text_size_sp_12"
        android:layout_below="@+id/tv_title_newitem"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf ="@+id/tv_ly_newitem"

        />


</RelativeLayout>