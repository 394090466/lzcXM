<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_essay_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="#000"
        android:lineSpacingMultiplier ="1.2"
        android:textScaleX = "1.2"
        android:text=""/>

    <ImageView
        android:id="@+id/iv_essay_dz"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/tv_essay_context"
        android:src="@drawable/icon_dz"/>
    <TextView
        android:id="@+id/tv_essay_dz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/tv_essay_context"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/iv_essay_dz"
        android:text="20.2万"/>

    <ImageView
        android:id="@+id/iv_essay_bxh"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:rotation="180"
        android:layout_below="@+id/tv_essay_context"
        android:layout_toRightOf="@+id/tv_essay_dz"
        android:src="@drawable/icon_dz"/>

    <TextView
        android:id="@+id/tv_essay_bxh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/tv_essay_context"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/iv_essay_bxh"
        android:text="20.2万"/>

    <ImageView
        android:id="@+id/iv_essay_msg"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/tv_essay_context"
        android:layout_toRightOf="@+id/tv_essay_bxh"
        android:src="@drawable/icon_msg"/>

    <TextView
        android:id="@+id/tv_essay_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/tv_essay_context"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/iv_essay_msg"
        android:text="20.2万"/>

</RelativeLayout>