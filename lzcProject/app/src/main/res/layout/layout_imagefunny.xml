<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_essay_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/iv_imagefunny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_essay_context"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/dp_5"
        android:maxHeight="@dimen/dp_500"/>

    <ImageView
        android:id="@+id/iv_essay_dz"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@+id/iv_imagefunny"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/icon_dz"/>

    <TextView
        android:id="@+id/tv_essay_dz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_imagefunny"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/iv_essay_dz"
        android:text="20.2万"/>

    <ImageView
        android:id="@+id/iv_essay_bxh"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@+id/iv_imagefunny"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_essay_dz"
        android:rotation="180"
        android:src="@drawable/icon_dz"/>

    <TextView
        android:id="@+id/tv_essay_bxh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_imagefunny"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/iv_essay_bxh"
        android:text="20.2万"/>

    <ImageView
        android:id="@+id/iv_essay_msg"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@+id/iv_imagefunny"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_essay_bxh"
        android:src="@drawable/icon_msg"/>

    <TextView
        android:id="@+id/tv_essay_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_imagefunny"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/iv_essay_msg"
        android:text="20.2万"/>

</RelativeLayout>